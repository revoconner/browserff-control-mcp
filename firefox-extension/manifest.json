{
    "manifest_version": 2,
    "name": "BrowserFF Control MCP",
    "version": "1.0.0",
    "description": "An extension that allows a local MCP server to perform actions on the browser.",
    "author": "Rév O'Conner",
    "developer": {
      "name": "Rév O'Conner",
      "url": "https://www.revoconner.com"
    },
    "homepage_url": "https://github.com/revoconner/browserff-control-mcp",
    "browser_specific_settings": {
        "gecko": {
            "id": "browserff-control-mcp@revoconner.com",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },
    "permissions": [
        "tabs",
        "tabGroups",
        "history",
        "storage",
        "<all_urls>",
        "find",
        "activeTab",
        "webNavigation",
        "bookmarks",
        "downloads"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "options_ui": {
      "page": "options.html"
    }
  }
